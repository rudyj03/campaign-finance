extends layout

block body
	div.jumbotron
		h2 Political contributions by candidate
	div(class="container theme-showcase", role="main", ng-controller="IndexCtrl")
		
		div.page-header
			p Select a state:
			select(ng-model="selectedState", ng-options="state.name for state in states", ng-change="stateChanged()")
		div(ng-show="selectedState")
			p {{selectedState.name}} has {{count}} congressional candidates:
			div.gridStyle(ng-grid="gridOptions")
			
	div(ng-view)
    
	script(src='js/lib/angular/angular.js')
	script(src='js/app.js')
	script(src='js/services.js')
	script(src='js/controllers.js')
	script(src='js/filters.js')
	script(src='js/directives.js')
	script(src='js/jquery.min.js')
	script(src='js/bootstrap.min.js')
	script(src='js/ng-grid-2.0.7.min.js')
